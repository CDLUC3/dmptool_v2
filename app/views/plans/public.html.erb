<% @title_text = "Public DMPs" %>
<h1 class="row-fluid"><span class="icon public-dmps"></span>Public DMPs</h1>
<br/>
<div class="row-fluid">
	<div class="span8">
		<p>Use the search box or the A-Z links below to narrow down the list by plan title. Public DMPs are plans created using the DMPTool and shared publicly by their owners. They are not vetted for quality, completeness, or adherence to funder guidelines.</p>
	</div>
	<div class="search-area span4 pull-right">
			<%= form_tag('', {:method => :get}) do %>
				<div class="control-group pull-right">
					<%= search_field_tag(:q, params[:q], :class => 'input-large') %>
					<%= label_tag :q, "Search", :class => "icon search" %>
					<%= submit_tag('Search') %>
				</div>
			<% end %>
	</div>
</div>
<br/>
<div class="row-fluid">
	<%= link_to('A - F', { :s => 'a', :e => 'f' , all_scope: @all_scope, order_scope: @order_scope}, 
				:class => 'btn viewA-F') %> 
	<%= link_to('G - L', { :s => 'g', :e => 'l' , all_scope: @all_scope, order_scope: @order_scope}, 
				:class => 'btn viewG-L') %> 
	<%= link_to('M - S', { :s => 'm', :e => 's' , all_scope: @all_scope, order_scope: @order_scope}, 
				:class => 'btn viewM-S') %> 
	<%= link_to('T - Z', { :s => 't', :e => 'z' , all_scope: @all_scope, order_scope: @order_scope}, 
			:class => 'btn viewT-Z') %> 
	<%= link_to('All', { :s => 'a', :e => 'z' , all_scope: @all_scope, order_scope: @order_scope}, 
			:class => 'btn viewA-Z') %>
</div>
<br/>
<%= render partial: 'public_table', :locals => {templates: @public_templates} %>


