  <% elsif state(@plan) == :reviewed %>
    <%= link_to "Done", plan_plan_states_committed_path(@plan), method: :post, :class => "btn btn-green pull-right" %>
  <% end %>

<% elsif @customization_review == "no" %>
  <% if state(@plan) == :committed %>
    <%= link_to "Done", plan_plan_states_committed_path(@plan), disabled: true, :class => "btn btn-green pull-right" %>
