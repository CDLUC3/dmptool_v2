<table class="table table-striped">
  <thead>
    <tr>
      <th class="span5"><%= link_to "Plan Title", {order_scope: "PlanTitle"}%></th>
      <th class="span5"><%= link_to "Funder Template", {order_scope: "FunderTemplate"}%></th>
      <th class="span5"><%= link_to "Institution", {order_scope: "OwnerInstitution"}%></th>
      <th class="span5"><%= link_to "Owner", {order_scope: "Owner"}%></th>
      <th>Download</th>
    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td class="plan_name">
          <div class="toggle-links">
            <strong><%= plan.name %></strong>
          </div>
        </td>
        <td>
          <%= (plan.requirements_template && plan.requirements_template.name) || 'seriously, more junk data?' %>
        </td>
        <td>
          <%= plan.owner.institution.name %>
        </td>
        <td>
          <%= plan.owner.full_name %>
        </td>
        <td>
          <%= link_to('', plan_path(plan, format: "pdf"), :class => 'icon pdf') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="buttons pagination">
  <%= link_to "View All", { :action => "public", :page => "all", order_scope: @order_scope}, { :class => "btn", :id => 'view_all_plans' } %>
  <%= paginate @plans %>
</div>
