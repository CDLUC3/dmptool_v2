<div class="help_box_head">
  <div style="float:right"><strong>box size:</strong>
    <a href="#" onclick="fixed_size('example_response_box', '60');return false;">small</a>
    | <a href="#" onclick="fixed_size('example_response_box','140');return false;">medium</a>
    | <a href="#" onclick="full_size('example_response_box');return false;">full</a></div>
  <strong>Guidance</strong>
</div>
<div class="help_box" id="example_response_box">
  <div class= 'global_resources'>
  	<% unless @requirement.global_resources.example_response.empty? %>
    <ul>
      <%# global resources for this requirement, Stephen's case #1 %>
      <% (@requirement.global_resources.example_response).each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
        </p>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class= 'template_resources'>
    <% unless @requirement.template_resources.example_response.empty? %>
    <ul>
      <%# template resources for this requirement, Stephen's case #2 %>
      <% (@requirement.template_resources.example_response).each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
        </p>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class= 'requirement_resources'>
    <% unless @requirement.requirement_resources.example_response.empty? %>
    <ul>
      <%# requirement resources for this requirement, Stephen's case #3 %>
      <% (@requirement.requirement_resources.example_response).each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
        </p>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class= 'institution_customization_resources'>
    <% unless @requirement.institution_customization_resources(current_user.institution_id).example_response.empty? %>
    <h3> <%= current_user.institution.name %> Resources </h3>
    <ul>
      <%# institution customization resources for this requirement, Stephen's case #4 %>
      <% (@requirement.institution_customization_resources(current_user.institution_id).example_response).each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
        </p>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class= 'template_customization_resources'>
    <% unless @requirement.template_customization_resources(current_user.institution_id).example_response.empty? %>
    <h3> <%= @requirements_template.name %> for <%= current_user.institution.name %> Resources"</h3>
    <ul>
      <%# template customization resources for this requirement, Stephen's case #5 %>
      <% (@requirement.template_customization_resources(current_user.institution_id).example_response).each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
        </p>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class= 'requirement_customization_resources'>
    <%# requirement customization resources for this requirement, Stephen's case #7 %>
  	<ul>
  		<% @example_resources.each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
        </p>
      </li>
  		<% end %>
  	</ul>
  </div>
</div>