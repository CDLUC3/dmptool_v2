<h1 class="row-fluid"><span class="icon review"></span>Review DMPs</h1>
<div class="dmptool-page">
	<h2>DMPs Pending My Review</h2>
	<div class="table-scope">
	<%= link_to "All (#{@all}) ", {scope: "all_limited"}, :class => "all_limited" %>
  |
  <%= link_to "Pending My Review (#{@submitted}) ", {scope: "submitted"}, :class => "submitted" %>
  |
  <%= link_to "Approved (#{@approved}) ", {scope: "approved"}, :class => "approved" %>
  |
  <%= link_to "Rejected (#{@rejected}) ", {scope: "rejected"}, :class => "rejected" %>
  </div>
	<table class="table table-striped" id="review_dmps">
	  <thead>
	    <tr>
	      <th>DMP Name</th>
	      <th>Owner</th>
	      <th>Submission Date</th>
	      <th class="span1">Status</th>
	      <th class="span1">Review DMP</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @plans.each do |plan| %>
	      <tr>
					<td class="span7", id="#{plan.name}"><strong><%= plan.name %></strong></td>
	        <td><%= owner_name(plan) %></td>
	        <td><%= plan.updated_at.strftime("%m/%d/%Y %I:%M%p") %></td>
	        <td class="span1"><strong><%= state(plan).capitalize %></strong></td>
	        <td class="span1">
	        	<div class="actions">
		        	<%= link_to "", perform_review_plan_path(plan), :class => "icon approve-template" %>
		        </div>
	        </td>
	      </tr>
	    <% end %>
	  <tbody>
	</table>
	    <div class="buttons pagination">
	      <%= link_to "View All", review_dmps_path(:scope => "all"), :method => :get, :class => "btn" %>
 	      <%= paginate @plans %>
	    </div>
	    </tr>
	  </tbody>
	</table>
</div>
