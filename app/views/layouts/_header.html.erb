	<div class="welcome">
		<p><%= "Welcome!" unless current_user.nil? %>
			<%= content_tag(:strong, "#{current_user.full_name}") unless current_user.nil? %></p>
	</div>
  <nav class="navbar">
    <ul class="nav">
      <ul class="nav pull-right">
        <li><%= link_to "Home", root_path, :title => "Home" %></li>
