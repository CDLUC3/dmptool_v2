<header class="header container">
  <%= link_to(image_tag("dmp_logo.png", :alt => "DMPTOOL", :width => "146", :height => "25"), root_path, :class => "logo", :title => "DMPTool Home") %>
  <div class="welcome">
    <p><%= "Welcome!" unless current_user.nil? %>
      <%= content_tag(:strong, "#{current_user.full_name}") unless current_user.nil? %></p>
  </div>
  <nav class="navbar">
    <ul class="nav">
      <li><%= link_to "Home", root_path, :title => "Home" %></li>
      <% if current_user %>
        <li><%= link_to "My Dashboard", dashboard_show_path, :title => "My Dashboard" %></li>
      <% end %>
      <li><%= link_to "DMP Requirements", guidance_path, :title => "DMP Requirements" %></li>
      <li><%= link_to "Public DMPs", public_dmps_path, :title => "Sample DMPs" %></li>
      <li><%= link_to "News", APP_CONFIG['blog'], :title => "News", :target => "_blank" %></li>
      <li><%= link_to "Help", help_path, :title => "Help" %></li>
      <li><%= link_to "Contact Us", contact_path, :title => "Contact Us" %></li>
      <li><%= link_to "About", about_path, :title => "About" %></li>
      <li class="login">
        <%= link_to(content_tag(:span, "", :class => "icon user-login") + "Log In", choose_institution_path) if !current_user %>
        <%= link_to(content_tag(:span, "", :class => "icon user-login") + "Log Out", logout_path) if current_user %></li>
    </ul>
  </nav>
</header>