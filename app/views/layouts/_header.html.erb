<header class="header container">
  <%= link_to(image_tag("dmp_logo.png", :alt => "DMPTOOL", :width => "146", :height => "25"), root_path, :class => "logo", :title => "DMPTool Home") %>
  <div class="welcome">
    <p><%= "Welcome!" unless current_user.nil? %>
      <%= content_tag(:strong, "#{current_user.full_name}") unless current_user.nil? %></p>
  </div>
  <nav class="navbar">
    <ul class="nav">
      <li class="nav-home"><%= link_to "Home", root_path, :title => "Home" %></li>
      <% if current_user %>
        <li class="nav-dashboard"><%= link_to "My Dashboard", dashboard_path, :title => "My Dashboard" %></li>
      <% end %>
      <li class="nav-guidance"><%= link_to "DMP Requirements", guidance_path, :title => "DMP Requirements" %></li>
      <li class="nav-public"><%= link_to "Public DMPs", public_dmps_path, :title => "Sample DMPs" %></li>
      <li class="nav-new"><%= link_to "News", APP_CONFIG['blog'], :title => "News", :target => "_blank" %></li>
      <li class="nav-help"><%= link_to "Help", help_path, :title => "Help" %></li>
      <li class="nav-contact"><%= link_to "Contact Us", contact_path, :title => "Contact Us" %></li>
      <li class="nav-about parent"><%= link_to "About", about_path, :title => "About" %>
      	<ul class="children right">
      		<li><%= link_to "FAQ", "http://dmptool.askbot.com/", :title => "FAQ", :target => "_blan" %></li>
      		<li><%= link_to "Video", video_path, :title => "Video" %></li>
      		<li><%= link_to "Partner Institutions", partners_path, :title => "Partner Institutions" %></li>
      	</ul>
      </li>
      <li class="login">
        <%= link_to(content_tag(:span, "", :class => "icon user-login") + "Log In", choose_institution_path) if !current_user %>
        <%= link_to(content_tag(:span, "", :class => "icon user-login") + "Log Out", logout_path) if current_user %></li>
    </ul>
  </nav>
</header>