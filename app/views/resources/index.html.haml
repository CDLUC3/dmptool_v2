%h4  Resource Template Details
%hr
.row-fluid
  .span5
    %fieldset.template_outline
      %strong Template Outline
      %hr
      .requirements_tree_view
        = nested_requirements @requirements.arrange(order: :created_at)
    %br/

    %fieldset.template_status
      %strong Resource Template Status:
      = @resource_template.active? ? 'Active' : 'Deactivated'
      %hr
      = link_to activate_link_text(@resource_template)+ ' ' +'Template', toggle_active_resource_template_path(@resource_template), remote: true, id: "activate_link_#{@resource_template.id}"
      %br/
      = link_to 'Delete Template', @resource_template, :method => :delete, :data => { :confirm => 'Are you sure?' }

  .span7
    = render 'form'

