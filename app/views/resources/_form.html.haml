= form_for @resource do |f|
  - if @resource.errors.any?
    #error_explanation
      %h2= "#{pluralize(@resource.errors.count, "error")} prohibited this resource from being saved:"
      %ul
        - @resource.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :label
    = f.text_field :label
  .field
    = f.label :requirement_id
    = f.number_field :requirement_id
  .field
    = f.label :resource_template_id
    = f.number_field :resource_template_id
  .actions
    = f.submit 'Save'
