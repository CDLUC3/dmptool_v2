	<h3 class="dashboard-heading"><span class="icon template-dmp"></span>DMP Templates</h3>
	<div class="table-scope">
		<%= link_to "All(#{@all})", scope: "all_limited", :class => "current" %>
		|
		<%= link_to "Active(#{@active})", scope: "active" %>
		|
		<%= link_to "Inactive(#{@inactive})", scope: "inactive" %>
		|
		<%= link_to "Institutional-Only(#{@institutional})", scope: "institutional" %>
		|
		<%= link_to "Public(#{@public})", scope: "public" %>
	</div>
	<table class="table table-striped table-condensed">
		<thead>
			<tr>
				<th> Name </th>
				<th class="narrow"> Version </th>
				<th> Institution </th>
				<th> Status </th>
				<th> Visibility </th>
				<th> Creation Date </th>
				<th> Last Modification Date </th>
			</tr>
		</thead>
		<tbody>
		<% @requirements_templates.each do |requirements_template| %>
			<tr>
				<td class="requirements_template_name">
					<script>
						jQuery(function(){
							jQuery(".toggle-links").hover(
								function(){jQuery(this).parent().find(".template-links").css("visibility", "visible")},
								function(){jQuery(this).parent().find(".template-links").css("visibility", "hidden")}
							);
						})
					</script>
						<div class="toggle-links">
							<%=link_to (content_tag(:strong, requirements_template.name)), requirements_template_requirements_path(requirements_template) %>
							<div class="template-links">
								<%= (link_to 'Overview', edit_requirements_template_path(requirements_template))+' | '+(link_to 'Details',requirements_template_requirements_path(requirements_template))+' | '+(link_to activate_link_text(requirements_template), toggle_active_requirements_template_path(requirements_template),remote: true, id: "activate_link_#{requirements_template.id}", class: 'ajax')+' | '+(link_to 'Copy', copy_existing_requirements_template_path(requirements_template))+' | '+(link_to 'Delete', requirements_template_path(requirements_template), :class => "delete", method: :delete, data: { confirm: 'Are you sure?' }) %>
							</div>
						</div>
				</td>
				<td class="narrow"><%= requirements_template.version %></td>
				<td><%= requirements_template.institution.full_name %></td>
				<td id="status_#{requirements_template.id}"><%= requirements_template.active ? "Active" : "Inactive" %></td>
				<td><%= requirements_template.visibility.capitalize %></td>
				<td><%= requirements_template.created_at.strftime("%m/%d/%Y %I:%M%p") %></td>
				<td><%= requirements_template.updated_at.strftime("%m/%d/%Y %I:%M%p") %></td>
			</tr>
		<% end %>
			<tr>
				<td colspan="7" class="full">
					<%= link_to "View All", requirements_templates_path(:scope => "all"), :method => :get, :class => "btn"%>
				</td>
			</tr>
		</tbody>
	</table>
	<%= button_to 'Create New template', requirements_template_information_path, :method => :get, :class => 'btn' %>
	<br/>	
	<%= render 'template_editors' %>

	<%= button_to 'Add New Template Editor', add_authorization_path, method: :post, id: 'add_authorization_view', :class => 'btn' %>

	<%= render partial: "/authorizations/add_authorization" , :locals => { :role_type => 3, :role_name => 'DMP Template Editor'}%>

	<div class="pagination">
		<%= paginate @requirements_templates %>
	</div>
