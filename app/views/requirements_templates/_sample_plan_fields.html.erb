<div class="control-group">
	<%= f.label :label, 'Sample plans', :class => 'control-label' %>
	<%= f.label :url, 'Plan Url', :class => 'hide' %>
	<div class="controls">
		<%= f.text_field :label, placeholder: 'Plan Name' %>
		<%= f.text_field :url, placeholder: 'Plan Url' %>
		<%= f.hidden_field :_destroy %>
		<%= link_to(content_tag(:span, "", :class => "icon remove") + "Remove", '#', :class => "red remove_fields") %>
	</div>
</div>