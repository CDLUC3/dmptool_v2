<div id="comment_dialog_form">
<%= form_for(@comment, remote: true, html: { :class => 'form-horizontal' }) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_excommentation">
      <h2>
        <%= "#{pluralize(@comment.errors.count, "error")} prohibited this Comment from being saved:" %>
      </h2>
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :plan_id, value: params[:plan_id] %>
  </div>
  <div class="control-group">
  	<%= f.label :comments, :class => 'control-label' %>
  	<div class="controls">
  		<%= f.text_area :value, placeholder: 'Comment', :class => 'input-xxlarge', rows: '10' %>
  	</div>
  </div>
  <div class="control-group">
  <% if safe_has_role?(Role::INSTITUTIONAL_REVIEWER) %>
    <%= f.hidden_field :visibility, value: :reviewer %>
  <% else %>
    <%= f.hidden_field :visibility, value: :owner %>
  <% end %>
  </div>
  <div class="buttons">
    <%= f.submit "Submit", :class => 'btn btn-success pull-left', method: 'post' %>
    <%= button_tag "Cancel", type: :reset, :class => "btn", id: "cancel_action" %>
  </div>
<% end %>
</div>