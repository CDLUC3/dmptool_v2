<br/>
<h2 class="dashboard-heading"><span class="icon funder-guidance"></span>Contact Us</h2>
<div class="contact row-fluid">
	<%= form_tag do %>
		<h4>Your message is about:</h4>
	  <div class="control-group">
	    <%= radio_button_tag :question_about, "using the dmptool" %>
	    <%= label_tag :question_about_Using_the_DMP_Tool, "Using the DMP Tool", :class => "checkbox-label" %>
	  </div>
	  <div class="control-group">
	    <%= radio_button_tag :question_about, "Becoming a participating institution" %>
	    <%= label_tag :question_about_becoming_a_participating_institution, "Becoming a participating institution", :class => "checkbox-label" %>
	  </div>
	  <div class="control-group">
	    <%= radio_button_tag :question_about, "Other" %>
	    <%= label_tag :question_about_Other, "Other", :class => "checkbox-label" %>
	  </div>
		<div class="control-group">
	    <%= label_tag :name, "Your Name" %>
	    <%= text_field_tag :name %>
		</div>
	  <div class="control-group">
	    <%= label_tag :email, "Email" %>
	    <%= email_field_tag :email %>
	  </div>
	  <div class="control-group">
	    <%= label_tag :message, "Message" %>
	    <%= text_area_tag "message", nil, :rows => 5, :cols => 35, placeholder: "", :class => "input-xxlarge" %>
	  </div>
	  <br/>
	  <%= submit_tag "Submit" %>
	<% end %>
</div>