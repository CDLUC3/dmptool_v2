<% @title_text = "DMP Requirements" %>
<h1 class="row-fluid"><span class="icon funder-guidance"></span>DMP Requirements</h1>
<br/>
<div class="row-fluid">
	<div class="span8">
		<p>Use the A-Z links below to narrow down the list by institution or
			use the search box to search for specific DMP Templates.  Sample
			plans are not necessarily from the funder.</p>
	</div>
	<div class="search-area span4 pull-right">
			<%= form_tag('', {:method => :get}) do %>
				<div class="control-group pull-right">
					<%= search_field_tag(:q, params[:q], :class => 'input-large') %>
					<%= label_tag :q, "Search", :class => "icon search" %>
					<%= submit_tag('Search') %>
				</div>
			<% end %>
	</div>
</div>
<br/>
<div class="row-fluid">
	<%= link_to('A - F', { :s => 'a', :e => 'f' , order_scope1: @order_scope1, scope1: @scope1}, :class => 'btn viewA-F') %> 
	<%= link_to('G - L', { :s => 'g', :e => 'l' , order_scope1: @order_scope1, scope1: @scope1}, :class => 'btn viewG-L') %> 
	<%= link_to('M - S', { :s => 'm', :e => 's' , order_scope1: @order_scope1, scope1: @scope1}, :class => 'btn viewM-S') %> 
	<%= link_to('T - Z', { :s => 't', :e => 'z' , order_scope1: @order_scope1, scope1: @scope1}, :class => 'btn viewT-Z') %> 
	<%= link_to('All', { :s => 'a', :e => 'z' , order_scope1: @order_scope1, scope1: @scope1}, :class => 'btn viewA-Z') %>
</div>
<br/>

<%= render partial: 'guidance_table', :locals => {templates: @public_templates, public: true} %>

<% if defined?(@institution_templates) && @institution_templates.length > 0 %>
<h1 class="row-fluid">
	<span class="icon institution-guidance"></span>DMP Requirements for <%= current_user.institution.full_name %>
</h1>

	<div class="table-scope">
		<p>Below is a list of DMP templates available in your institution</p>
	</div>
	<%= render partial: 'guidance_table_institutional', :locals => {templates: @institution_templates, public: false} %>
<% end %>

