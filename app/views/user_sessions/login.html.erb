<% @title_text = "Account Log In" %>
<h1 class="row-fluid"><span class="icon login"></span>Log In</h1>
<div class="login row-fluid">
	<div class="span7">
		<p><strong>Log in to DMPTool through:</strong><br/>
			<%= @institution.full_name %></p>
	  <%= form_tag '/auth/ldap/callback', method: :post do %>
	    <%= hidden_field_tag :institution_id, session[:institution_id]%>
	    <div class='control-group'>
		    <%= label_tag :username %>
		    <%= text_field_tag :username %>
		  </div>
		  <div class='control-group'>
		    <%= label_tag :password %>
		    <%= password_field_tag :password %>
	    </div>
	    <div class='control-group'>
		    <%= check_box_tag :remember_my_username %>
		    <%= label_tag :remember_my_username, 'Remember My Username', :class => 'checkbox-label' %>
		  </div>
	    <%= submit_tag 'Login', :class => 'btn btn-green' %>
	  <% end %>
	  <div class="control-group forgot_password">
		  <p><%= link_to 'Forgot your username?', action: 'username_reminder' %><br/>
				<%= link_to 'Forgot your password?', action: 'password_reset' %></p>
		</div>
	</div>
	<div class="span5">
		
		<div class="control-group create_account">
			<p><strong>Don't have a DMPTool account yet?</strong></p>
				<%= link_to 'Create An Account', new_user_path, :class => 'btn btn-green' %>
		</div>
	</div>
</div>
