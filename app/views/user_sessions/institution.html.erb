<% @title_text = "Log In" %>
<h1 class="row-fluid"><span class="icon login"></span>Institution Log In</h1>
<div class="login row-fluid">
	<div class="span5 user_login">
		<h2>Log in through your institution</h2>
	  <%= form_tag login_path, method: :post do %>
			<div class="control-group select_institution">
				<p><%= label_tag :institution_id, "Select your institution below and you will be directed to your institutional log in page." %></p>
	    	<%= select_tag(:institution_id, options_for_select(@inst_list, :selected => session[:institution_id]),
	    		:prompt => 'Select your institution', :class => "institution") %>
	    	
	  	</div>
	    <%= submit_tag 'Next >>' %>
	  <% end %>
	  <p>If you do not see your institution in the list, <br/>
	  	please select <strong>&quot;Not in List&quot;</strong> and click <strong>Next</strong>.</p>
	</div>
</div>
