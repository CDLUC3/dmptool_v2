<h3 class="dashboard-heading"><span class="icon template-editor"></span>Resource Editors</h3>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th> Name </th>
      <th> Username </th>
      <th> Email </th>
      <th> Revoke Role </th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.login_id %></td>
      <td><%= user.email %></td>
      <td><%= link_to raw(''), remove_authorization_path(user_id: user.id, role_id: 2, p: 'resource_templates'), :class => "icon remove" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Add New Editor', add_role_path, method: :post, id: 'add_role_view', :class => "btn btn-green" %>
<div class="pagination">
  <%= paginate @users %>
</div>