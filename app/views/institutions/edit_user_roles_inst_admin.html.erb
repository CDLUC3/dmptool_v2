<h2 class="dashboard-heading"><span class="icon admin"></span>Edit User Roles</h2>
<div class="tabbable">
	<ul class="nav nav-tabs">
		<li class="active"><%= link_to 'User Roles', '#tab1', 'data-toggle' => 'tab' %></li>
	</ul>
	<div class="tab-content">
		<div class="tab-pane active" id="tab1">
				<%= form_tag(update_user_roles_inst_admin_path(user_id: @user.id, anchor: 'tab_tab4'), method: 'post') do %>
				<h5><%= @user.first_name %> Current Roles:</h5>
				<hr/>
				<div class="control-group">
					<ul>
						<% @roles.each do |role| %>
							<div id=<%="role_#{role.id}"%> >
						  	<li><%= check_box_tag "role_ids[]", role.id, checked = @user.has_role?(role.id) %>
						    <%= label_tag role.name, role.name, :class => 'checkbox-label' %></li>
							</div>
						<% end %>
					</ul>
				</div>
				<br/>
				<div class="buttons">
				<%=  submit_tag 'Save Changes', :anchor => 'tab_tab4',  :class => 'btn btn-green' %>
				<%= link_to 'Back', institutions_path( :anchor => 'tab_tab4'), :class => 'btn' %>
			</div>
		<%end%>
		</div>
	</div>
</div>
