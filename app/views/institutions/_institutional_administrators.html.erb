<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Revoke Role</th>
    </tr>
  </thead>
  <tbody>
    <% @institution_users.each do |user| %>
      <tr>
          <td><%= user.full_name %></td>
          <td><%= user.login_id %></td>
          <td><%= user.email %></td>
          <td><%= link_to raw('<i class="icon-minus-sign icon-white"></i>'), remove_authorization_path(user_id: user.id, role_id: 5, p: 'institutions'), class: "img-polaroid btn-danger" %></td>
          
      </tr>
    <% end %>
   </tbody>
</table>
<br>


<%= link_to 'Add New Institutional Administrator', add_authorization_path, method: :post, id: 'add_authorization_view'%>


<%= render partial: "/authorizations/add_authorization" , :locals => { :role_type => 5, :role_name => 'Institutional Administrator', :p => 'institutions'}%>



