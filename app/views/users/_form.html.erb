<%= form_for @user, html: { :class => 'form-horizontal' } do |f| %>
  <% if @user.errors[:base].any? %>
    <div class="alert alert-error form-errors">
      <% @user.errors[:base].each do |msg| %>
        <p>
          <%= msg %>
        </p>
      <% end %>
    </div>
  <% end %>
  
  <% unless @user.new_record? %>
    
    <div class="tabbable">
        <ul class="nav nav-tabs">
          <li class="active"><%= link_to 'Personal Information', '#tab1', 'data-toggle' => 'tab' %></li>
         	<li><%= link_to 'Notification Preferences', '#tab2', 'data-toggle' => 'tab' %></li>
        </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="tab1">
          <%= render 'personal', f: f %>
        </div>
        <div class="tab-pane" id="tab2">
          <%= render 'notifications' unless @user.new_record? %>
        </div>
      </div>
    </div>
    <div class="buttons">
  		<%= f.submit 'Save', :class => 'btn' %>
  		<%= link_to 'Cancel', edit_user_path(@user), :class => 'btn' %>
  	</div>
  
  <% end %>
  
  <% if @user.new_record? %>
  	<%= render 'personal', f: f %>
	  <p><%= f.submit 'Create Account' %></p>
  <% end %>

<% end %>
<% if @user.new_record? %>
<p>By clicking <strong>Create Account</strong>,you agree to our <%= link_to 'Terms of Use', '#', :title => "DMPTool Terms of Use", :target => "_blank" %> and <%= link_to 'Privacy Policy', '#', :title => "DMPTool Privacy Policy", :target => "_blank" %>.</p>
<% end %>