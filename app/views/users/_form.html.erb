<%= form_for @user, html: { :class => 'form-horizontal' } do |f| %>
  <%= render partial: "shared/errors", locals: {model: @user } %>
      
    <div class="tabbable">
        <ul class="nav nav-tabs">
          <li class="active"><%= link_to 'Personal Information', '#tab1', 'data-toggle' => 'tab' %></li>
         	<li><%= link_to 'Notification Preferences', '#tab2', 'data-toggle' => 'tab' %></li>
        </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="tab1">
          <%= render 'personal', f: f %>
        </div>
        <div class="tab-pane" id="tab2">
          <%= render 'notifications' unless @user.new_record? %>
        </div>
      </div>
    </div>
    <div class="buttons">
  		<%= f.submit 'Save', :class => 'btn' %>
  		<%= link_to 'Cancel', edit_user_path(@user), :class => 'btn' %>
  	</div>

<% end %>


























