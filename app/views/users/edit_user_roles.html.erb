<h2 class="dashboard-heading"><span class="icon admin"></span>Edit User Roles</h2>
<div class="tabbable">
	<ul class="nav nav-tabs">
		<li class="active"><%= link_to 'User Roles', '#tab1', 'data-toggle' => 'tab' %></li>
	</ul>
	<div class="tab-content">
		<div class="tab-pane active" id="tab1">
				<%= form_tag(update_user_roles_path(user_id: @user.id), method: 'post') do %>
				<h5><%= @user.first_name %> Current Roles:</h5>
				<hr/>
				<div class="control-group">
					<ul>
					<% @roles.each do |role| %>
				  	<li><%= check_box_tag 'role_ids[]', role.id, checked = @user.has_role?(role.id) %>
				    <%= label_tag role.name, role.name, :class => 'checkbox-label' %></li>
					<% end %>
					</ul>
				</div>
				<br/>
				<div class="buttons">
				<%=  submit_tag 'Save Changes',  :class => 'btn btn-green' %>
				<%= link_to 'Back', users_path, :class => 'btn' %>
			</div>
		<%end%>
		</div>
	</div>
</div>



