<% if @resource_context.new_record? %>
  <%= link_to('<< Choose DMP Template', dmp_for_customization_path, method: :get, :class => "btn pull-left") %>
<% else %>
  <%= link_to('<< Customization', resource_contexts_path, method: :get, :class => "btn pull-left") %>
<% end %>
<%= link_to('Customization Details >>', '#', :class => "btn pull-right", :id => 'next_btn') %>

<script type="text/javascript">
  $('#next_btn').click(function(e) {
    e.preventDefault();
    $('#new_resource_context').submit();
  });
</script>