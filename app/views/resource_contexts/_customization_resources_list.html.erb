<br />
<h2 class="row-fluid">Template Resources for <%= @template_name %>  - Customized for 
	<% if @customization_institution_name %>
			<%= @customization_institution_name %>
	<% else %>	
			<%= @all_institutions %>
	<% end %>
</h2>
<div>
	<p>These resources will be displayed for all requirements defined for this template.</p>
</div>

	
<table class="table table-striped">

	<thead>
		<tr>
			<th class="span4">Details</th>
			<th>Action</th>
			<th>Institution</th>
			<th>Creation Date</th>
			<th>Last Modification Date</th>
		</tr>
	</thead>
	<tbody>
	<% @resource_contexts.each do |resource_context| %>
		<tr>
			<td>
				<div class="toggle-links">
					<%= resource_context.resource.nil? ? " " :  resource_context.resource.label %>
				</div>
			</td>
			<td>
            <%= link_to raw(''),
              edit_customization_resource_path(id: resource_context.resource_id,
                                               customization_id: @customization.id,
                                               custom_origin: "Overview",
                                               origin_url: smart_origin_url),
                                               :class => 'icon edit-user',
                                               :title => 'Edit' %>
            <%= link_to raw(''), 
						unlink_resource_from_customization_path(resource_id: resource_context.resource.id,
                            								template_id: @customization.requirements_template_id, 
                                            customization_id: @customization.id,
                                            institution_id: @customization.institution_id,
                                            unlink_from_customization: true,
                                            custom_origin: "Overview"),  
                                  			method: :post,
                                  			:class => 'icon unlink',
                                  			:title => 'Unlink from customization' %>
            </td>
			<td><%= resource_context.institution.nil? ? " " :  resource_context.institution.nickname %></td>
			<td><%= resource_context.created_at.nil? ? " " :  resource_context.created_at.strftime("%m/%d/%Y %I:%M%p") %></td>
			<td><%= resource_context.updated_at.nil? ? " " :  resource_context.updated_at.strftime("%m/%d/%Y %I:%M%p") %></td>

		</tr>
	<% end %>
	<tbody>
</table>




<div class="buttons">
	<%= button_to 'Add another Resource', 
								select_resource_path(template_id: @template.id, 
								customization_overview_id: @resource_context.id,
								custom_origin: "Overview",
                origin_url: smart_origin_url,
                tab_number: params[:tab_number],
								:method => :post,
								:class => "btn btn-green") %>
</div>
